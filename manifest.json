{
    "manifest_version": 2,
    "name": "Amazon UK To Euro",
    "version": "0.3.0",
    "web_accessible_resources": [
        "images/*.jpg"
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.co.uk/*"
            ],
            "js": ["jquery-3.3.1.min.js","settings/storage.js","content.js"],
            "css": ["content.css"]
        }
    ],
    "browser_action": {
        "default_popup": "settings/settings.html",
        "default_title": "Click For Settings"
    }
}